<style>
  .root{
   display: flex;
   width: 100%;
   height: 100%;
  background: #eaf0f1;
  border-radius: 2%;
  justify-content:center;
  align-items: center;
  }
  
  
  
  .subdiv{
   display: flex;
   width: 920px;
  background:#54ec98;
  border-radius: 2%;
  justify-content:center;
  flex-direction: column;
  padding: 20px;
  }
  .rowstyle{
      width:900px;
      margin:10px;
  }
  
  </style>
  <html>
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
      <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
      <script src="/javascripts/project.js"></script>
      <title>Faculties Interface</title>
   <body>
   <form action="/faculty/submitfaculty">
   <div class="root">
      <div class="subdiv">
          <div class="row rowstyle">
              <div class="col" style="color:firebrick;font-size:20px; font-weight:bold; letter-spacing:1px ">
               <img src="/images/fac.png" width=40/>
                  Faculty Interface
              </div>  
          </div>
       
          <div class="row rowstyle">
            <div class="col">
              <input type="text" class="form-control" placeholder="First Name" name="firstname">
            </div>
            <div class="col">
              <input type="text" class="form-control" placeholder="Last Name" name="lastname">
            </div>
  
        </div>
        <div class="row rowstyle">
          <div class="col">
            <input type="date" class="form-control" placeholder="Birth Date" name="birthdate">
          </div>
          <div class="col" style="display: flex; align-items: center;justify-content: center;">
            <i class="fas fa-male" style="font-size:35; color:darkgreen"></i>
            <input type="radio" value="Male" name="gender" style="margin-left: 5px;" >
            <i class="fas fa-female" style="font-size:35; color:hotpink; margin-left: 20px;"></i>
            <input type="radio" value="female" name="gender" style="margin-left: 5px;" >
          </div>
  
      </div>
  
      <div class="row rowstyle">
        <div class="col">
          <input type="text" class="form-control" placeholder="Mobile Number" name="mobileno">
        </div>
        <div class="col">
          <input type="text" class="form-control" placeholder="Email Address" name="email">
        </div>
        </div>
  
        <div class="row rowstyle">
          <div class="col">
            <input type="text" class="form-control" placeholder="Address" name="address">
          </div>
        </div>
  
        <div class="row rowstyle">
          <div class="col">
            <select class="form-control" name="state" id="state">
             <option>-States-</option> 
             </select> 
          </div>
          <div class="col">
            <select class="form-control" id="city" name="city">
              <option>-City-</option>
            </select>  
          </div>
          <div class="col">
            <input type="text" class="form-control" placeholder="Zipcode" id="zipcode" name="zipcode">
          </div>
                 
        </div>
  
        <div class="row rowstyle">
          <div class="col">
            <input type="text" class="form-control" placeholder="Qualification" name="qualification">
          </div>
          <div class="col">
        <select class="form-control" name="department">
          <option>-Department-</option>
          <option>Computer Science</option>
          <option>Information Technology</option>
          <option>Civil</option>
          <option>Electrical</option>
          </select>
          </div>
        </div>
  
        <div class="row rowstyle">
          <div class="col">
            <input type="file" class="form-control" placeholder="Upload Image" name="image">
          </div>
        </div>
  
  
        <div class="row rowstyle" >
          <div class="col" style="display: flex; align-items: center;justify-content: center;" >
            <button style="font-size: 18; width: 350;" type="submit" class="btn btn-primary">Submit</button>
          </div>
          <div class="col" style="display: flex; align-items: center;justify-content: center;">
            <button  style="font-size: 18; width: 350;" type="reset" class="btn btn-primary">Reset</button>
          </div>
          
        </div>
       
  
  </div>
  </div>
  </form>
  </body>
  </html>